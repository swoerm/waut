<Window x:Class="Waut.Configurator.Views.MainView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:local="clr-namespace:Waut.Configurator.ViewModels"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:views="clr-namespace:Waut.Configurator.Views"
        Title ="MainView" Height="600" Width="1100"
        >

    <Window.DataContext>
        <local:MainViewModel/>
    </Window.DataContext>

    <Grid>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
            <Button 
             Content="{Binding HiButtonContent}"
             Command="{Binding HiButtonCommand}" 
             CommandParameter="Hai" 
             Width="100" Height="100"  Margin="0,10,0,349"  />
            <Button 
             Content="Toggle Can Click" 
             Command="{Binding ToggleExecuteCommand}"  
             Width="100" Height="100" Margin="0,10,0,349"/>
            <Button 
             Content="Load Data"
             Command="{Binding ReadDataCommand}"  
             Width="100" Height="100"  Margin="0,10,0,349"  />
            <views:ControlModuleView/>
        </StackPanel>
        <TextBox HorizontalAlignment="Left" Height="23" Margin="650,66,0,0" TextWrapping="Wrap" Text="LoadFile" VerticalAlignment="Top" Width="120"/>
    </Grid>
</Window>
