<Window x:Class="Waut.Configurator.Views.MainView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:local="clr-namespace:Waut.Configurator.ViewModels"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:views="clr-namespace:Waut.Configurator.Views"
        Title ="MainView" Height="600" Width="1300"
        >

    <Window.DataContext>
        <local:MainViewModel/>
    </Window.DataContext>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0*"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Grid.ColumnSpan="2">
            <Button 
             Content="{Binding HiButtonContent}"
             Command="{Binding HiButtonCommand}" 
             CommandParameter="Hai" 
             Width="100" Height="100"  Margin="0,10,0,349"  />
            <Button 
            	Content="Toggle Can Click" 
            	Command="{Binding ToggleExecuteCommand}"  
            	Width="100" Height="100" Margin="0,65,0,404"/>
            <views:ControlModuleView/>
        </StackPanel>
    </Grid>
</Window>
